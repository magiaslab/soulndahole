---
import { Image } from 'astro:assets';
import unicornoImg from '../assets/images/Unicorno.png';
import idraImg from '../assets/images/Idra.png';
import feniceImg from '../assets/images/Fenice.png';
import krakenImg from '../assets/images/Kraken.png';
import grifoneImg from '../assets/images/Grifone.png';
import chimeraImg from '../assets/images/Chimera.png';
import minotauroImg from '../assets/images/Minotauro.png';
import Sfondo2 from '../assets/images/Sfondo2.png';

const teams = [
  { name: "Unicorno", imageSrc: unicornoImg, icon: "🦄" },
  { name: "Idra", imageSrc: idraImg, icon: "🐉" },
  { name: "Fenice", imageSrc: feniceImg, icon: "🔥" },
  { name: "Kraken", imageSrc: krakenImg, icon: "🐙" },
  { name: "Grifone", imageSrc: grifoneImg, icon: "🦅" },
  { name: "Chimera", imageSrc: chimeraImg, icon: "🦁" },
  { name: "Minotauro", imageSrc: minotauroImg, icon: "🐂" }
];
---

<section 
  id="teams" 
  class="py-16 relative"
  style={`background-image: url(${Sfondo2.src}); background-size: cover; background-position: center;`}
>
  <div class="absolute inset-0 bg-black/80"></div>
  <div class="container mx-auto px-4 relative">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-black text-white mb-4 font-display uppercase" style="text-shadow: 0 0 15px rgba(220, 38, 38, 0.5);">
        Le 7 Bestie
      </h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Le leggendarie squadre che si sfideranno per il dominio del campo.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-7 gap-6">
      {teams.map((team) => (
        <div class="group relative overflow-hidden rounded-xl bg-gray-900/50 backdrop-blur-sm border border-red-800/50 hover:border-red-600 transition-all duration-300 hover:scale-105">
          <div class="p-6 text-center">
            <div class="w-24 h-24 mx-auto mb-4 rounded-full flex items-center justify-center text-3xl shadow-lg group-hover:scale-110 transition-transform duration-300 overflow-hidden bg-gray-800 border-2 border-red-800/50 group-hover:border-red-600">
              {team.imageSrc ? (
                <Image src={team.imageSrc} alt={`Logo ${team.name}`} class="w-full h-full object-cover" width="128" height="128" />
              ) : (
                <span>{team.icon}</span>
              )}
            </div>
            <h3 class="text-xl font-bold text-white mb-2 group-hover:text-red-500 transition-colors duration-300">
              {team.name}
            </h3>
            <div class="w-12 h-1 bg-gradient-to-r from-red-600 to-orange-500 mx-auto rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-transparent via-red-900/10 to-transparent -translate-y-full group-hover:translate-y-0 transition-transform duration-500 opacity-0 group-hover:opacity-100"></div>
        </div>
      ))}
    </div>

    <!-- Statistiche del torneo -->
    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="text-center">
        <div class="text-4xl font-bold text-red-500 mb-2">7</div>
        <div class="text-gray-300">Squadre</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-red-500 mb-2">6</div>
        <div class="text-gray-300">Partite</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-red-500 mb-2">1</div>
        <div class="text-gray-300">Campione</div>
      </div>
    </div>
  </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Teko:wght@700&display=swap');
  .font-display {
    font-family: 'Teko', sans-serif;
  }

  /* Animazioni aggiuntive per le card */
  .group:hover {
    box-shadow: 0 0 30px rgba(220, 38, 38, 0.4);
  }
</style> 