---
import Sfondo1 from '../assets/images/Sfondo1.png';

const features = [
  {
    title: "Date & Orari",
    description: "3-4-5-6 Luglio 2025\nDalle 19 alle 24",
    icon: "calendar"
  },
  {
    title: "Luogo",
    description: "Via Aurelia Sud, San Vincenzo (LI)",
    icon: "map-pin"
  },
  {
    title: "Torneo Streetball 5x5",
    description: "Il risveglio della bestia\nCategoria: Open, Under, Celebrity Game",
    icon: "award"
  }
];
---

<section 
  class="feature-cards relative py-12 md:py-20 bg-black"
  style={`background-image: url(${Sfondo1.src}); background-size: cover; background-position: center; background-attachment: fixed;`}
>
  <div class="absolute inset-0 bg-black/70"></div>
  <div class="container relative mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature, index) => (
        <div 
          class="feature-card transform hover:scale-105 transition-transform duration-300 ease-in-out p-8 rounded-xl bg-soul-gray-900 border border-soul-gray-800 shadow-lg shadow-soul-red-900/10"
        >
          <div class="flex items-center justify-center h-16 w-16 rounded-full bg-soul-red-500/10 border-2 border-soul-red-500 mb-6">
            <span class="text-3xl">{feature.icon === 'calendar' ? '📅' : feature.icon === 'map-pin' ? '📍' : '🏆'}</span>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">{feature.title}</h3>
          <p class="text-gray-300 whitespace-pre-line">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .feature-card {
    box-shadow: 0 4px 24px -4px rgba(0, 0, 0, 0.4);
    transition: all 0.3s ease;
  }
  
  .feature-card:hover {
    box-shadow: 0 8px 32px -4px rgba(220, 38, 38, 0.3);
  }
</style>

