---
import { Image } from 'astro:assets';
import logo from '../assets/images/logo.svg';
import SocialIcons from './SocialIcons.tsx';
---

<footer class="bg-gray-900 text-soul-gray-300 py-12">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8 text-center md:text-left">
            <div class="md:col-span-1 flex flex-col items-center md:items-start">
                <a href="/" class="mb-4">
                    <Image src={logo} alt="Soul In Da Hole Logo" width="120" class="h-auto" />
                </a>
                <p class="font-bold text-white text-lg uppercase font-display tracking-wider">Soul 'n Da Hole</p>
                <p class="text-sm text-soul-gray-400">Il risveglio della bestia</p>
            </div>
            
            <div class="w-full">
                <h3 class="text-white font-bold text-lg mb-4 uppercase font-display tracking-wider">Men√π</h3>
                <ul>
                    <li class="mb-2"><a href="/" class="text-soul-gray-300 hover:text-white transition-colors">Home</a></li>
                    <li class="mb-2"><a href="/programma" class="text-soul-gray-300 hover:text-white transition-colors">Programma</a></li>
                    <li class="mb-2"><a href="/teams" class="text-soul-gray-300 hover:text-white transition-colors">Squadre</a></li>
                    <li class="mb-2"><a href="/albo-doro" class="text-soul-gray-300 hover:text-white transition-colors">Albo d'oro</a></li>
                    <li class="mb-2"><a href="/sponsor" class="text-soul-gray-300 hover:text-white transition-colors">Sponsor</a></li>
                    <li class="mb-2"><a href="/trovaci" class="text-soul-gray-300 hover:text-white transition-colors">Trovaci</a></li>
                </ul>
            </div>
            
            <div class="w-full">
                <h3 class="text-white font-bold text-lg mb-4 uppercase font-display tracking-wider">Contatti</h3>
                <p class="mb-2">Email: <a href="mailto:soul.n.da.hole07@gmail.com" class="hover:text-white">soul.n.da.hole07@gmail.com</a></p>
                <p class="mb-4">Seguici sui social:</p>
                <SocialIcons client:load />
            </div>
        </div>
        
        <div class="border-t border-gray-800 mt-12 pt-8 text-center text-sm">
            <p>&copy; {new Date().getFullYear()} Soul In Da Hole. Tutti i diritti riservati.</p>
        </div>
    </div>
</footer>

<style>
  .social-link {
    @apply text-gray-400 hover:text-red-500 transition-colors;
  }

  .social-link:hover {
    transform: translateY(-3px);
    transition: transform 0.3s ease;
  }
</style> 