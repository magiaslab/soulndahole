---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

// Import local logos
import mainLogo from "../assets/images/logos/logoipsum-335.svg";
import titleLogo1 from "../assets/images/logos/logoipsum-327.svg";
import titleLogo2 from "../assets/images/logos/logoipsum-342.svg";
import otherLogo1 from "../assets/images/logos/logoipsum-348.svg";
import otherLogo2 from "../assets/images/logos/logoipsum-350.svg";
import otherLogo3 from "../assets/images/logos/logoipsum-356.svg";
import otherLogo4 from "../assets/images/logos/logoipsum-358.svg";
import otherLogo5 from "../assets/images/logos/logoipsum-360.svg";
import otherLogo6 from "../assets/images/logos/logoipsum-372.svg";

const mainSponsor = { name: "Main Sponsor", logo: mainLogo };

const titleSponsors = [
    { name: "Title Sponsor 1", logo: titleLogo1 },
    { name: "Title Sponsor 2", logo: titleLogo2 },
];

const otherSponsors = [
    { name: "Sponsor 1", logo: otherLogo1 },
    { name: "Sponsor 2", logo: otherLogo2 },
    { name: "Sponsor 3", logo: otherLogo3 },
    { name: "Sponsor 4", logo: otherLogo4 },
    { name: "Sponsor 5", logo: otherLogo5 },
    { name: "Sponsor 6", logo: otherLogo6 },
];
---

<Layout title="Sponsor - Soul 'n Da Hole" description="Scopri gli sponsor che supportano il torneo Soul 'n Da Hole.">
    <main class="min-h-screen bg-black py-24 text-white">
        <div class="container mx-auto px-4 text-center">
            <h1
                class="mb-12 text-5xl font-black uppercase text-white md:text-7xl"
                style="text-shadow: 0 0 15px rgba(220, 38, 38, 0.5);"
            >
                I Nostri Sponsor
            </h1>

            <!-- Main Sponsor -->
            <section class="mb-20">
                <h2
                    class="mb-8 text-4xl font-bold uppercase tracking-wider text-soul-red-500"
                >
                    Main Sponsor
                </h2>
                <div class="flex justify-center">
                    <div
                        class="rounded-lg bg-gray-100 p-8 transition-transform hover:scale-105"
                    >
                        <Image
                            src={mainSponsor.logo}
                            alt={mainSponsor.name}
                            class="h-32 w-auto"
                        />
                    </div>
                </div>
            </section>

            <!-- Title Sponsors -->
            <section class="mb-20">
                <h2
                    class="mb-8 text-4xl font-bold uppercase tracking-wider text-soul-red-500"
                >
                    Title Sponsor
                </h2>
                <div class="flex flex-wrap justify-center gap-8">
                    {
                        titleSponsors.map((sponsor, index) => (
                            <div
                                class="rounded-lg bg-gray-100 p-6 transition-transform hover:scale-105"
                            >
                                <Image
                                    src={sponsor.logo}
                                    alt={sponsor.name}
                                    class="h-24 w-auto"
                                />
                            </div>
                        ))
                    }
                </div>
            </section>

            <!-- Other Sponsors -->
            <section>
                <h2
                    class="mb-8 text-3xl font-bold uppercase tracking-wider text-soul-red-500"
                >
                    Tutti gli Sponsor
                </h2>
                <div
                    class="grid grid-cols-2 gap-8 md:grid-cols-3 lg:grid-cols-4"
                >
                    {
                        otherSponsors.map((sponsor, index) => (
                            <div
                                class="flex items-center justify-center rounded-lg bg-gray-100 p-4 transition-transform hover:scale-105"
                            >
                                <Image
                                    src={sponsor.logo}
                                    alt={sponsor.name}
                                    class="h-16 w-auto"
                                />
                            </div>
                        ))
                    }
                </div>
            </section>
        </div>
    </main>
</Layout>