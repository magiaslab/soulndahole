---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { ViewTransitions } from 'astro:transitions';
import { createSlug } from '../utils/slug';

// Dati delle squadre
import chimera from '../assets/images/Chimera.png';
import fenice from '../assets/images/Fenice.png';
import grifone from '../assets/images/Grifone.png';
import idra from '../assets/images/Idra.png';
import kraken from '../assets/images/Kraken.png';
import minotauro from '../assets/images/Minotauro.png';
import unicorno from '../assets/images/Unicorno.png';

const teams = [
    { name: 'Chimera', logo: chimera, slug: 'chimera' },
    { name: 'Fenice', logo: fenice, slug: 'fenice' },
    { name: 'Grifone', logo: grifone, slug: 'grifone' },
    { name: 'Idra', logo: idra, slug: 'idra' },
    { name: 'Kraken', logo: kraken, slug: 'kraken' },
    { name: 'Minotauro', logo: minotauro, slug: 'minotauro' },
    { name: 'Unicorno', logo: unicorno, slug: 'unicorno' },
].sort((a, b) => a.name.localeCompare(b.name));
---

<Layout title="Squadre - Soul 'n Da Hole" description="Conosci le 7 squadre del torneo Soul 'n Da Hole: Unicorno, Idra, Fenice, Kraken, Grifone, Chimera, Minotauro.">
    <ViewTransitions />
    <main class="min-h-screen bg-black py-24 text-white">
        <div class="container mx-auto px-4">
            <div class="mb-16 text-center">
                <h1 class="text-5xl md:text-7xl font-black uppercase text-white" style="text-shadow: 0 0 15px rgba(220, 38, 38, 0.5);">
                    Le Squadre
                </h1>
                <p class="text-xl text-gray-400 mt-4">Sette squadre, un solo vincitore. Scopri i protagonisti del torneo.</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-16">
                {teams.map(team => (
                    <a href={`/teams/${team.slug}`} class="team-card group block text-center" transition:name={`team-logo-${team.slug}`}>
                        <div class="logo-container relative w-48 h-48 mx-auto rounded-2xl border-4 border-soul-gray-800 group-hover:border-soul-red-500 transition-all duration-300 transform group-hover:scale-105 flex items-center justify-center bg-soul-gray-900 overflow-hidden">
                            <Image
                                src={team.logo}
                                alt={`Logo ${team.name}`}
                                class="w-full h-full object-cover"
                            />
                        </div>
                        <h3 class="mt-4 text-2xl font-bold uppercase tracking-wider">{team.name}</h3>
                    </a>
                ))}
            </div>
        </div>
    </main>
</Layout>

<style>
  .font-display { font-family: 'Teko', sans-serif; }
</style> 