---
import '../styles/global.css';
import 'aos/dist/aos.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="it">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<script src="/src/scripts/initHeader.js"></script>
	</body>
</html>

<style is:global>
	html {
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		padding: 0;
		overflow-x: hidden;
		background-color: #000;
	}

	footer {
		position: relative;
	}

	main {
		position: relative;
	}
</style>
